<h3 class="header">Slide #<%= slide.position %></h3>
<div class="slide-edit">
  <div class="slide-form">
    <h3>Slide Content</h3>
    <form action="#/preso/<%= preso.id() %>/edit/<%= params.slide_id %>" method="post">
      <p><textarea class="content-textarea" name="content"><%= slide.content %></textarea></p>
      <p><label>Theme:</label>
        <select name="theme" class="theme-select">
          <% $.each(themes, function(i, v) { %>
            <option value="<%= v %>"<% if (slide.theme == v) { %>selected="selected"<% } %>><%= v %></option>
          <% }); %>
        </select>
        <label>Transition:
          <select name="transition" class="transition-select">
            <% $.each(transitions, function(i, v) { %>
              <option value="<%= v %>"<% if (slide.transition == v) { %>selected="selected"<% } %>><%= v %></option>
            <% }); %>
          </select> 
      </p>
      <p>
        <label>Additional Styles:</label><br />
        <textarea name="additional_css"><%= slide.additional_css %></textarea>
      </p>
      <p>
        <% if ((slide.position - 1) > 0) { %>
        <button class="linked-button" name="prev" rel="#/preso/<%= preso.attributes._id %>/edit/<%= slide.position - 1 %>">Previous</button>
        <% } %>
        <button type="submit" class="submit default">Save &amp; Next</button>
        <button class="linked-button submit" name="display" rel="#/preso/<%= preso.attributes._id %>/display/<%= slide.position %>">Preview</button>
      </p>
    </form>
    <h3>Upload an Image</h3>
    <% if (preso.attributes._attachments) { %>
      <ul class="slide-attachments">
        <% $.each(preso.attributes._attachments, function(k, v) { %>
          <li class="slide-attachment" rel="<%= join('/', preso.uri(), k) %>"><%= k %> (<%= v.content_type %>)</li>
        <% }); %>
      </ul>
    <% } %>
    <form action="#/preso/<%= preso.id() %>/upload" method="post">
      <input type="hidden" name="_rev" />
      <p><input type="file" name="_attachments" /><button type="submit" class="default">Upload</button></p>
    </form>
  </div>
  <div class="slide-preview">
    <div class="slide active">
      <div class="content"></div>
    </div>
  </div>
  <div class="clear"></div>
</div>